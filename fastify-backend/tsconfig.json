{
  "compilerOptions": {
    "target": "es2022", 
    "module": "nodenext", 
    "moduleResolution": "nodenext", 
    "rootDir": "./src", 
    "outDir": "./dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "sourceMap": true, 
    "removeComments": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  }
}
